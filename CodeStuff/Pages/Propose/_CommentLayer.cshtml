@model CodeStuff.TalkProposal.Views.CommentLayer

<div>
@foreach (var comment in  Model.Comments)
{
    <div class="ms-4 border-start ps-2">
        <div class="small text-muted">@comment.User: @comment.TimeStamp.ToShortDateString() @comment.TimeStamp.ToShortTimeString() 
            <i data-comment-id="@comment.CommentId" data-bs-toggle="modal" data-bs-target="#addCommentModal" class="fa-regular fa-reply" role="button"></i> </div>
        <div class="mb-2">@comment.Text</div>
        <partial name="_CommentLayer" for="@comment.SubCommentLayer"/>
    </div>
}
</div>